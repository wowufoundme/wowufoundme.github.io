@import _variables
@import _functions
@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900')
@import url('https://fonts.googleapis.com/css?family=Playfair+Display')
@import url('https://fonts.googleapis.com/css?family=Tangerine:700')

*
  padding: 0
  margin: 0
  text-rendering: auto
  font-smoothing(antialiased)
  box-sizing: border-box

a
  color: inherit
  text-decoration: none

html 
  height: 100%

body 
  width: 100%
  height: 100%
  font: normal 14px/24px 'Roboto','Helvetica','Helvetica Neue','Arial',sans-serif 
  background-color: light-blue
  color: main-color 
  overflow-x: hidden
  overflow-y auto
  
.wrapper 
  position: relative
  width: 100%

.title-container 
  width: 100%
  height: 4rem
  center-flex(column)
  position fixed
  top 0
  z-index 9998
  background light-blue
  box-shadow 0 0 1px 2px #94c2ff

.title 
  position: relative
  font-size: 28px
  font-weight 300
  text-align: center
  @media (max-width: 768px)
    font-size: 16px;
  span 
    font-weight 500
  
.container
  display: flex
  position: relative
  
/*
 *  Text Formatting
 */

.highlight
  background-color inherit
  transition(background-color .1s linear)

.highlight:hover
  background-color darken(light-blue, 10%)

.invert 
  background-color #4a4a4a
  color light-blue
  border-radius 10px

.text-only
  font-weight 300
  font-style italic
  font-size 75%
  
.not-italics
  font-style normal

.strike-me
  text-decoration line-through

/*
 *  x-codes SECTION
 */

.x-codes
  width 80%
  margin 0 auto
  color #4a4a4a
  @media (max-width 768px)
    width 90%
  .x-code_wall
    padding 100px 0 0 0
    .hero-description
      font-size 3.6rem
      line-height 4.4rem
      letter-spacing -.1rem
      padding-bottom 50px
      @media (max-width 768px)
        font-size 3rem
      @media (max-width 500px)
        font-size 2rem
        line-height 2.6rem
      li 
        list-style none
  .row
    center-flex(row)
    padding: 5px
    width: 95%
    @media (max-width: 768px)
      center-flex(column)
    .column 
      width: 20%
      height: 180px
      margin: 2px
      background-position: center
      background-size: 100%
      background-repeat: no-repeat
      @media (max-width: 768px)
        width: 100%
      
mark 
  background transparent
  color inherit
  text-decoration underline
  span
    font-weight 700
  
.card-light
  background-color #ffffff
  color #222
  
.card-dark
  background-color #222f3e
  color #ececec
  
.card-inverted
  text-align right